
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Change Password
    </h1>
</section>
<section class="content">
    <div class="box box-primary">

   
        <div class="box-body">
            <!-- right column -->
            <div class="col-xl-6 align-self-md-center" style="margin-left:25%">
                <!-- Horizontal Form -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form class="form-horizontal form-element" id="changepassform">
                        <div class="box-body">
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-2 control-label">Current Password</label>

                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="currentpass">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-2 control-label">New Password</label>

                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="newpassword">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2 control-label">Confirm Password</label>

                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="confirmpassword">
                                </div>
                            </div>
                            
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="button" id="btnsub" class="btn btn-info pull-right">Submit</button>
                        </div>
                        <!-- /.box-footer -->
                    </form>
                </div>
              
            </div>
            <!--/.col (right) -->
        </div>
    </div>
</section>


@section Scripts{

    <script type="text/javascript">
        $(function () {
            $("#btnsub").on("click", function () {
                
                if($("#newpassword").val() == $("#confirmpassword").val())
                {
                    $.ajax({
                        url: '/Login/Changepass',
                        data: {
                            newpassword: $("#newpassword").val(),
                            confirmpassword: $("#confirmpassword").val(),
                            currentpass: $("#currentpass").val()
                        },
                        type: 'POST',
                        datatype: "json",
                        success: function (returnData) {
                            if (returnData.result == "Success") {
                                $("#changepassform")[0].reset();
                                swal("Password Changed");
                            }
                            else {
                                swal("Incorrect Password");
                            }

                        }
                    });
                }
                else {
                    swal("Passwords does not Match");

                }
            })

        })
       

    </script>
}
