@using Brothers_WMS.Models;
@using System.Data.SqlClient;
@using Brothers_WMS.Controllers;
@using System.Configuration;
@{
    List<CostCenterM> CostCodenew = new List<CostCenterM>();
    string UserSection = string.Empty;
    if ((List<CostCenterM>)(Session["newCostCode"]) != null)
    {
        CostCodenew = (List<CostCenterM>)(Session["newCostCode"]);
        M_Users UserInfo = (M_Users)(Session["user"]);
        UserSection = UserInfo.Section;
        //UserSection = UserInfo.Section;
    }
    else
    {
        Url.Action("Logout", "Login");
    }


}
<header class="main-header">

    <!-- Logo -->
    <div class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>B</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg">
            <img src="~/Content/images/Brother_Logo_White.png" alt="Brother" style="height:35px;" />
        </span>
    </div>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>

        <div class="navbar-custom-menu">
        
            <ul class="nav navbar-nav" style="font-size:26px">
                @if (UserSection == null)
                {
                    <li class="dropdown messages-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-bell"></i>
                            <span class="label label-success" style="font-size:15px">@CostCodenew.Count()</span>
                        </a>
                        <ul class="dropdown-menu scale-up">
                            <li>
                                <!-- inner menu: contains the actual data -->
                                <ul class="menu inner-content-div">
                                    @foreach (CostCenterM a in CostCodenew)
                                    {
                                        <li>
                                            <!-- start message -->
                                            <a href="#">

                                                <div class="mail-contnet">
                                                    <h4>
                                                        @a.CostCodenew
                                                        <small><i class="fa fa-cogs"></i>  @a.CostCodenewname</small>
                                                    </h4>

                                                </div>
                                            </a>
                                        </li>
                                    }
                                    <!-- end message -->

                                </ul>
                            </li>
                            <li class="footer"><a href="#" id="goCost">See Cost Center</a></li>
                        </ul>
                    </li>

                }
                    <li>
                        <a href="#" data-toggle="control-sidebar" data-placement="bottom" title="Theme Settings"><i class="fa fa-cog fa-spin"></i></a>
                    </li>
                </ul>
            </div>
    </nav>
</header>


