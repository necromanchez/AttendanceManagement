<link rel="stylesheet" href="~/Content/assets/vendor_components/glyphicons/glyphicon.css">

<link href="~/Content/assets/vendor_components/select2/dist/css/select2.min.css" rel="stylesheet" />
<link href="~/Content/css/master_style.css" rel="stylesheet" />
<link href="~/Content/css/skins/_all-skins.css" rel="stylesheet" />

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link href="~/Content/assets/vendor_plugins/timepicker/bootstrap-timepicker.min.css" rel="stylesheet" />
<style>
    .resized {
    width: 146.813px !important;
    }
</style>
<div class="box-body">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item"> <a class="nav-link active" href="@Url.Action("OTSummary", "OTSummary", new { area = "Summary" })" role="tab"><span class="hidden-sm-up"><i class="ion-home"></i></span> <span class="hidden-xs-down">OT Summary</span></a> </li>
