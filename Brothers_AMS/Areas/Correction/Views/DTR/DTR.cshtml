                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-md-6">
                            @*<label style="font-weight:bold"><label style="color:red">*&nbsp;</label>DTR Reference No:&nbsp;&nbsp;</label><label id="DTRRefno"> </label>*@
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-flat bg-green btn-lg btn-block" id="btnSaveDTR" data-dismiss="modal">
                                <i class="fa fa-save"></i> Submit
                            </button>
                        </div>
