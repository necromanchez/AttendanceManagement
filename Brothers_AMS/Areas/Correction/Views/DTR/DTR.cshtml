
@{
    ViewBag.Title = "DTR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/Content/assets/vendor_components/glyphicons/glyphicon.css">
<link href="~/Content/IEcssdatepicker.css" rel="stylesheet" />
<link href="~/Content/assets/vendor_plugins/timepicker/bootstrap-timepicker.min.css" rel="stylesheet" />
<section class="content-header">
    <h1>
        DTR FORM
    </h1>
</section>

<section class="content">
    <div class="box box-primary">

        <div class="box-body pad">

            <form action="" method="POST" role="form" id="DTRForm">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">DTR Type</span>
                                <select class="form-control" id="DTRType" name="DTRType">
                                    <option value="HR">HR</option>
                                    <option value="Internal">Internal</option>
                                </select>
                               
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">Section</span>
                                @*<select class="form-control" id="Section" name="Section"></select>*@
                                <input type="text" class="form-control" id="Section" name="Section">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><a href="#" data-toggle="tooltip" title="Date to be corrected!">Date From</a></span>
                                <input type="text" class="form-control" id="DateFrom" name="DateFrom" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">BIPH/Agency</span>
                                <select class="form-control select2" id="BIPH_Agency" name="BIPH_Agency"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><a href="#" data-toggle="tooltip" title="Date to be corrected!">Date To</a></span>
                                <input type="text" class="form-control" id="DateTo" name="DateTo" disabled>
                               
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">File Type</span>
                                <select class="form-control select2" id="FileType" name="FileType" disabled>
                                    @*<option value="">--SELECT--</option>
                                    <option value=1>Individual</option>
                                    <option value=2>Group</option>*@
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">Employee No/ADID</span>
                                <input list="EmployeeNoList" name="EmployeeNo" id="EmployeeNo" class="form-control" onkeyup="getEmployeeNo()" disabled>
                                <datalist id="EmployeeNoList"></datalist>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="bootstrap-timepicker">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><a href="#" data-toggle="tooltip" title="Time to be corrected!">Time In</a></span>
                                    <input type="text" class="form-control timepicker" id="Timein" name="Timein" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">Line/Team</span>
                                <select class="form-control select2" id="Line_Team" name="Line_Team" disabled></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bootstrap-timepicker">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><a href="#" data-toggle="tooltip" title="Time to be corrected!">Time Out</a></span>
                                    <input type="text" class="form-control timepicker" id="TimeOut" name="TimeOut" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="display:none">
                    <div class="col-md-6">
                        <div class="bootstrap-timepicker">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">Overtime Out</span>
                                    <input type="text" class="form-control timepicker" id="OTout" name="OTout" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bootstrap-timepicker">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">Overtime In</span>
                                    <input type="text" class="form-control timepicker" id="OTin" name="OTin" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">Overtime Type</span>
                                <select class="form-control select2" id="OvertimeType" name="OvertimeType">
                                    <option value="Regular">Regular</option>
                                    <option value="SundayHoliday">Sunday/Holiday</option>
                                    <option value="LegalHoliday">Legal Holiday</option>
                                    <option value="SpecialHoliday">Special Holiday</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                            <div class="form-group">
                                <button type="button" class="btn btn-flat bg-green btn-lg btn-block" id="btnDownloadTemplate">
                                    <i class="fa fa-download"></i> Download Template
                                </button>
                            </div>
                    </div>
                    <div class="col-md-3">
                            <div class="form-group">
                                <button type="button" class="btn btn-flat bg-green btn-lg btn-block" id="btnFileUpload">
                                    <i class="fa fa-upload"></i> Upload
                                </button>
                                <input type="file" name="UploadedFile" id="UploadedFile" placeholder="(.xlsx)" accept=".xlsx" style="display:none">
                            </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="col-md-12 col-xs-12 no-padding-l">
                                    <button type="button" class="btn btn-flat bg-green btn-lg btn-block" id="btnconfirm">
                                        <i class="fa fa-save"></i> Submit
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="col-md-6 col-xs-12 no-padding-l">

                                </div>
                                <div class="col-md-6 col-xs-12 no-padding-l">
                                    <button type="button" class="btn btn-flat bg-blue btn-lg btn-block" id="btnSearch" style="display:none">
                                        <i class="fa fa-search"></i> Search
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
              
            </form>

        </div>
        <div class="box-body" id="ALLtbl">
            <table id="DTREmployeeTable" class="table table-bordered table-striped table-responsive">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="checkall_emp" class="filled-in chk-col-light-blue" />
                            <label class="checker" for="checkall_emp"></label>
                        </th>
                        <th>Employee ID</th>
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Agency</th>
                        <th>CostCenter (AMS)</th>
                        <th>Section</th>
                        <th>Schedule</th>
                       <!--  <th>Line</th> -->
                    </tr>
                </thead>
                <tbody>
                </tbody>      
            </table>
        </div>
        @*<div class="row">
            <div class="offset-md-9 col-md-3 no-ad">
                <div class="form-group">
                    <div class="input-group">
                        <div class="col-md-12 col-xs-12 no-padding-l">
                            <button type="button" class="btn btn-flat bg-green btn-lg btn-block" id="btnconfirm">
                                <i class="fa fa-save"></i> Submit
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>*@
    </div>
</section>

