
@{
    ViewBag.Title = "ForecastSetting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="content-header">
    <h1>Forecast Settings</h1>


</section>




<section class="content">
    <div class="row">
        <div class="col">
            <div class="box">
                <div class="box-header">
                    <i class="fa fa-th"></i>

                    <h3 class="box-title">Year Forcast</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-white btn-sm" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        @*<button type="button" class="btn btn-white btn-sm" data-widget="remove">
                                <i class="fa fa-times"></i>
                            </button>*@
                    </div>
                </div>
                <div class="box-body border-radius-none">
                    <div class="row">
                        <div class="col-12">
                            <div class="box">

                                <!-- /.box-header -->
                                <div class="box-body no-padding">

                                    <form action="" method="POST" role="form" id="AgencyForm">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><span style="color:red;">*&nbsp;</span>Year</span>
                                                        <select class="form-control" id="Years" name="Years"></select>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <button type="submit" class="btn btn-flat bg-green btn-lg btn-block" id="btnAddYear">
                                                            <i class="fa fa-save"></i> Create Year
                                                        </button>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </form>



                                    <div class="table-responsive">
                                        <table class="table table-striped table-no-bordered table-hover" style="width:100%;" id="Forecasttbls"></table>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- /.col -->
    </div>
 
    <div class="row">
        <div class="col">
            <div class="box">
                <div class="box-header">
                    <i class="fa fa-th"></i>
                    <h3 class="box-title">Position Forecast</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-white btn-sm" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body border-radius-none">
                    <div class="row">
                        <div class="col-12">
                            <div class="box">
                                <!-- /.box-header -->
                                <div class="box-body no-padding">

                                    <form action="" method="POST" role="form" id="ForecastPostForm">
                                      
                                        <input type="hidden" class="form-control input-sm" name="ID" id="ID" readonly="">

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <span class="input-group-addon">Position</span>
                                                        <input type="text" class="form-control" id="Position" name="Position">
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <span class="input-group-addon">Class(J)</span>
                                                        <input type="text" class="form-control" id="ClassJ" name="ClassJ">
                                                    </div>
                                                </div>

                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <span class="input-group-addon">Class(E)</span>
                                                        <input type="text" class="form-control" id="ClassE" name="ClassE">
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <span class="input-group-addon">Unit</span>
                                                        <input type="text" class="form-control" id="Unit" name="Unit">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="offset-md-9 col-md-3">
                                                <button type="submit" class="btn btn-flat bg-green btn-lg btn-block" id="BtnSavePos">
                                                    <i class="fa fa-save"></i> Save
                                                </button>
                                            </div>
                                        </div>


                                    </form>



                                    <div class="table-responsive">
                                        <table class="table table-striped table-no-bordered table-hover" style="width:100%;" id="Forecasttbls_pos"></table>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- /.col -->
    </div>


    <div class="row">
        <div class="col">
            <div class="box">
                <div class="box-header">
                    <i class="fa fa-th"></i>
                    <h3 class="box-title">Position Classification</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-white btn-sm" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body border-radius-none">
                    <div class="row">
                        <div class="col-12">
                            <div class="box">
                                <!-- /.box-header -->
                                <div class="box-body no-padding">

                                    <form action="" method="POST" role="form" id="ForecastPostFormClass">

                                        <input type="hidden" class="form-control input-sm" name="ID" id="ID" readonly="">

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <span class="input-group-addon">Position</span>
                                                        <select class="form-control" id="PositionName" name="PositionName">
                                                           
                                                        </select>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <span class="input-group-addon">Classification</span>
                                                        <select class="form-control" id="Classification" name="Classification"></select>
                                                    </div>
                                                </div>

                                            </div>

                                        </div>
                                     
                                        <div class="row">
                                            <div class="offset-md-9 col-md-3">
                                                <button type="submit" class="btn btn-flat bg-green btn-lg btn-block" id="BtnSavePosClass">
                                                    <i class="fa fa-save"></i> Save
                                                </button>
                                            </div>
                                        </div>


                                    </form>



                                    <div class="table-responsive">
                                        <table class="table table-striped table-no-bordered table-hover" style="width:100%;" id="Forecasttbls_posClass"></table>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- /.col -->
    </div>
</section>


@section Scripts{
       
    <script src="~/Areas/Forecast/Javascripts/ForecastSettings.js"></script>



}


