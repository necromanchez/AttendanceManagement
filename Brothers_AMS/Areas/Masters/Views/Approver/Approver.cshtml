
@{
    ViewBag.Title = "Approver";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Approver
    </h1>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header">
            <i class="fa fa-user"></i>
            <h3 class="box-title">Approver Details</h3>
        </div>
        <div class="box-body pad">

            <form action="" method="POST" role="form" id="ApproverForm">
                <input type="hidden" class="form-control input-sm" name="ID" id="ID" readonly="">

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">BIPH/Agency</span>
                                <select class="form-control" id="BIPH_Agency" name="BIPH_Agency"></select>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">Employee No/ADID</span>

                                <input list="EmployeeNoList" name="EmployeeNo" id="EmployeeNo" class="form-control" onkeyup="getEmployeeNo()">
                                <datalist id="EmployeeNoList"></datalist>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">Section</span>
                                <select class="form-control" id="Section" name="Section">
                                   
                                </select>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">Status</span>
                                <select class="form-control" name="Status" id="Status">
                                    <option value=true>Active</option>
                                    <option value=false>Inactive</option>
                                </select>
                            </div>

                        </div>

                    </div>

                </div>
                
                <div class="row">
                    <div class="offset-md-9 col-md-3">
                        <button type="submit" class="btn btn-flat bg-green btn-lg btn-block" id="Add_btn">
                            <i class="fa fa-save"></i> Save
                        </button>
                    </div>
                </div>
            </form>

        </div>
        <div class="box-body">
            <table class="table table-striped table-no-bordered table-hover" id="ApproverTable">
                <thead>

                </thead>
            </table>
        </div>
    </div>
</section>


@section Scripts{

    <script src="~/Areas/Masters/Javascripts/Approver.js"></script>
}


