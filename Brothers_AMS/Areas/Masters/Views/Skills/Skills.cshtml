
@{
    ViewBag.Title = "Skills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Skills
    </h1>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header">
            <i class="fa fa-certificate"></i>
            <h3 class="box-title">Skill Details</h3>
        </div>
        <div class="box-body pad">

            <form action="" method="POST" role="form" id="SkillsForm">
                <input type="hidden" class="form-control input-sm" name="ID" id="ID" readonly="">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" id="remarks_group">
                            <div class="input-group">
                                <span class="input-group-addon">Line/Team</span>
                                <select class="form-control" name="Line" id="Line"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group" id="remarks_group">
                            <div class="input-group">
                                <span class="input-group-addon">Skill</span>
                                <input type="text" class="form-control input-sm" name="Skill" id="Skill">
                            </div>
                        </div>
                    </div>
                   
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" id="remarks_group">
                            @*<div class="input-group">
                                <span class="input-group-addon">Skill</span>
                                <input type="text" class="form-control input-sm" name="Skill" id="Skill">
                            </div>*@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group" id="remarks_group">
                            <div class="input-group">
                                <span class="input-group-addon">Status</span>
                                <select class="form-control" name="Status" id="Status">
                                    <option value=true>Active</option>
                                    <option value=false>Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="offset-md-9 col-md-3">
                        <button type="submit" class="btn btn-flat bg-green btn-lg btn-block" id="Add_btn">
                            <i class="fa fa-save"></i> Save
                        </button>
                    </div>
                </div>
            </form>

        </div>

        <div class="box-body">


            <table class="table table-striped table-no-bordered table-hover" id="SkillsTable">
                <thead>

                </thead>
            </table>
        </div>
    </div>
</section>


@section Scripts{
    <script src="~/Areas/Masters/Javascripts/Skills.js"></script>
}




